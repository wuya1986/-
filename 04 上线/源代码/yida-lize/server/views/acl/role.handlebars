{{#if (isAllowed @root.session.permissions 'admin' 'list')}}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Role
    <small>{{@root.req.query.name}}</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="{{{url 'acl.index'}}}">List</a></li>
    <li class="active">Role</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box">
        <div class="box-header search-area">
          <h3 class="box-title">Resources</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-striped">
            {{#each resources}}
            <tr>
              <td>{{add @index 1}}.</td>
              <td>{{@key}}</td>
              <td>{{this}}</td>
            </tr>
            {{/each}}
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
    <div class="col-md-6">
      <div class="box box-default">
        <div class="box-header search-area with-border">
          <h3 class="box-title">Admins</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <div class="table-responsive Role-messages">
            <table class="table table-hover table-striped">
              <tbody>
                {{#each admins}}
                {{> admin_item admin=this actions=false}}
                {{/each}}
              </tbody>
            </table>
            <!-- /.table -->
          </div>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /. box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->
{{else}}
您还没有此功能的访问权限
{{/if}}
