{{#if (isAllowed @root.session.permissions 'admin' 'list')}}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    ACLs
    <small>roles, resouces, premissions, users</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">ACls</a></li>
    <li class="active">list</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box">
        <div class="box-header search-area">
          <h3 class="box-title">Roles</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-striped">
            {{#each roles}}
            <tr>
              <td>{{add @index 1}}.</td>
              <td>
                <a href="/acl/role?name={{this.id}}">{{this.id}}</a>
              </td>
              <td>{{this.text}}</td>
            </tr>
            {{/each}}
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>

    <div class="col-md-6">
      <div class="box">
        <div class="box-header search-area">
          <h3 class="box-title">Resources</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-striped">
            {{#each resources}}
            <tr>
              <td>{{add @index 1}}.</td>
              <td>
                {{this.id}}
              </td>
            </tr>
            {{/each}}
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->
{{else}}
您还没有此功能的访问权限
{{/if}}
