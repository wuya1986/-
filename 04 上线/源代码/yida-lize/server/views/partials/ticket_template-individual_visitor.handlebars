<div class="form-group form">
  <label class="col-sm-3 control-label">访客姓名</label>
  <div class="col-sm-9">
    <input type="text" class="form-control" name="form_data[individual_visitor_name]" value="{{data.form_data.individual_visitor_name}}"/>
  </div>
</div>
<div class="form-group form">
  <label class="col-sm-3 control-label">访问日期</label>
  <div class="col-sm-9">
    <div class="input-group date">
      <input type="text" class="form-control" name="form_data[individual_visitor_date]" value="{{ymd data.form_data.individual_visitor_date 'YYYY-MM-DD'}}"/>
      <span class="input-group-addon"><i class="fa fa-th"></i></span>
    </div>
  </div>
</div>
<div class="form-group form">
  <label class="col-sm-3 control-label">来访目的</label>
  <div class="col-sm-9">
    <textarea class="form-control" name="form_data[individual_visitor_purpose]">{{data.form_data.individual_visitor_purpose}}</textarea>
  </div>
</div>
{{#extend 'scripts'}}
<script>
  $(function () {
    $('.input-group.date').datepicker({
      language: "zh-CN",
      format: "yyyy-mm-dd"
    });
  });
</script>
{{/extend}}
