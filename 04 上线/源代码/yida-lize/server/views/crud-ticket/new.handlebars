{{#if (isAllowed @root.session.permissions ticketTemplate._id 'add')}}
{{#extend 'styles'}}
<style>
</style>
{{/extend}}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    新建工作票
    <small>{{ticketTemplate.title}} </small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="{{{url 'dashboard.index'}}}"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">新建 {{ticketTemplate.title}} 工作票</li>
  </ol>
</section>
<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-8">
      <!-- Input addon -->
      <div class="box box-solid box-default">
        <div class="box-header with-border">
          <h3 class="box-title">工作票信息</h3>
        </div>
        <!-- form -->
        <form action="/crud/{{ticketTemplate._id}}" method="post">
          <input type="hidden" name="ticket[ticket_template]" value="{{ticketTemplate._id}}">
          <div class="box-body">
            <div class="form-group form">
              <label class="col-sm-3 control-label">关联企业<span class="required_input">*</span></label>
              <div class="col-sm-9">
                <select class="form-control js-data-company-ajax" name="ticket[company]" id="company_id" style="width: 50%" required>
                </select>
              </div>
            </div>
            <div class="form-group form">
              <label class="col-sm-3 control-label">内容</label>
              <div class="col-sm-9">
                <textarea class="form-control textarea" name="ticket[content]" rows="6"></textarea>
              </div>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary" id="btn_save" ><i id="i_save" class="fa fa-floppy-o"></i> 保存</button>
          </div>
          <!-- /.box-footer -->
        </form>
        <!-- /form -->
      </div>
    <!-- /.box -->
    </div>
  <!-- /.col-md-6 -->
  </div>
  <!-- /.row -->
</section>
<!-- /.section -->
{{#extend 'scripts'}}
<script> 
 $(function(){
   $(".textarea").wysihtml5();

   {{> select2_script_company}}
 });
  $('form').on('submit', function () {
      $("#btn_save").attr("disabled","true");
      $("#i_save").addClass("fa-spin");
  });
</script>
{{/extend}}

